{
  "restartable": "rs",
  "ignore": [".git", "node_modules"],
  "verbose": true,
  "execMap": {
    "ts": "ts-node"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": ["test/fixtures/", "test/samples/"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,js,json",
  "exec": "ts-node ./src/index.ts"
}
